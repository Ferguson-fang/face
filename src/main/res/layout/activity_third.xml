<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/third"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#D8D5D5"
        android:paddingLeft="10dp"
        android:text="HomeWork"
        android:textSize="30dp"
        android:textColor="#000000"
        android:gravity="center_vertical">
    </TextView>
    <Button
        android:id="@+id/Back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/third"
        android:background="#00000000"

        android:text="注册"
        android:textSize="20dp"
        android:textColor="#093D65"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/icon_back_off"/>
    <LinearLayout
        android:id="@+id/zhiHu"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/Back"
        android:background="#00000000"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_zhihu_off"
            />

    </LinearLayout>
    <EditText
        android:id="@+id/yongHu_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/Back"
        android:layout_marginTop="175dp"
        android:background="@drawable/button_one_color"
        android:hint="请输入账号："
        android:textColorHint="#9FE9F3"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        />
    <EditText
        android:id="@+id/miMa_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/yongHu_3"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_one_color"
        android:hint="请输入密码："
        android:inputType="textPassword"
        android:textColorHint="#9FE9F3"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        />
    <EditText
        android:id="@+id/miMa_3again"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/miMa_3"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_one_color"
        android:hint="再次输入密码："
        android:inputType="textPassword"
        android:textColorHint="#9FE9F3"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        />
    <Button
        android:id="@+id/cGzC"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@id/third"
        android:layout_marginTop="455dp"
        android:background="#0291D1"
        android:text="注册"
        android:textSize="26dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@id/cGzC"
        android:layout_marginTop="150dp"/>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:padding="20dp">
    <TextView
        android:id="@+id/homework"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#C6C4C5"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="HomeWork"
        android:textColor="#000"
        android:textSize="25dp"/>
    <TextView
        android:id="@+id/dengRu"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/homework"
        android:layout_marginTop="10dp"
        android:text="登录"
        android:textColor="#093D65"
        android:textSize="50dp" />
    <TextView
        android:id="@+id/HY"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/dengRu"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="#7A000000"
        android:text="您好，欢迎来到知乎日报！"
        android:textSize="20dp"/>
    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/miMa"
        android:layout_marginTop="50dp"
        android:background="#0291D1"
        android:gravity="center"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="20dp"
        />

    <EditText
        android:id="@+id/yongHu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/dengRu"
        android:layout_marginTop="70dp"
        android:background="@drawable/button_one_color"
        android:hint="请输入账号："
        android:textColorHint="#9FE9F3"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:drawableLeft="@drawable/icon_user_off"
        android:drawablePadding="10dp"/>
    <EditText
        android:id="@+id/miMa"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/yongHu"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_one_color"
        android:hint="请输入密码："
        android:textColorHint="#9FE9F3"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:textSize="16sp"
        android:drawableLeft="@drawable/icon_password_off"
        android:drawablePadding="10dp"/>
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/miMa"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="10dp"
        android:button="@drawable/gouxaun"
        android:textColor="#093D65"
        android:text="同意用户协议"
        />
    <Button
        android:id="@+id/zhuCe"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/login"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_denglu"
        android:text="没有账号？立即注册"
        android:textColor="#023D6C"/>
    <TextView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/zhuCe"
        android:layout_marginTop="125dp"
        android:background="#000000"/>
    <RelativeLayout
        android:id="@+id/weiBo"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="#00000000"
        android:layout_below="@id/zhuCe"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/xinLang"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:background="#00000000"
            android:drawableTop="@drawable/icon_xinlang_off"
            android:gravity="bottom"
            android:paddingLeft="50dp"
            android:text="新浪微博登录"
            android:textColor="#093D65" />


    </RelativeLayout>

</RelativeLayout>